<div class="info_column">
              <h2>Authors</h2>
              <ul class="authors">
<% @book.authors.each do |author| %>
                <li itemprop="author"><%= author %></li>
<% end %>
              </ul>

              <h2>Publisher</h2>
              <p itemprop="publisher"><%= @book.self_published? ? Bookshelf::SELFPUB_NAME : @book.publisher %></p>
<% if @book.notes %>
              <h2>Notes</h2>
              <p class="notes"><%= @book.notes %></p>
<% end %>
            </div>

            <h2>Available formats</h2>
            <ul class="formats">
<% @book.formats.each do |format| %>
              <li><a class="<%= format[:extension] %>" href='<%= format[:link] %>'><%= format[:extension] %></a></li>
<% end %>
            </ul>

<% unless @book.isbn == "" %>
<div class="info_column">
            <h2>Details</h2>
            <p>ISBN: <span itemprop="isbn" class="isbn_<%= @book.isbn %>"><%= @book.isbn %></span></p>
</div>
<% end %>
