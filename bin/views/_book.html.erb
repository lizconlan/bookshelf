      <article itemscope itemtype="http://schema.org/Book" id="book_<%= @uniq %>" class="book <%= "ribbon" if @book.editions? %>" data-controller="books" data-target="sort.article">
<% if @book.cover_pic %>
        <img itemprop="image" src="<%= @book.cover_pic %>" alt="<%= @book.title %>" data-action="click->books#reveal_info"/>
<% else %>
        <img itemprop="image" src="assets/missing-image.gif" alt="<%= @book.title %>" data-action="click->books#reveal_info"/>
<% end %>

        <h2 class="title">
          <a href="<%= @book.link %>" itemprop="name">
            <%= @book.title %>
          </a>
        </h2>

        <section class="about" data-target="books.panel">
          <h1><%= @book.title %></h1>
<% if @book.editions? %>
          <div class="tab_set">
            <ul>
<% @book.editions.each_with_index do |edition, idx| %>
              <li class="tab_button" id="btn_<%= edition.ident %>"  data-target="books.button" data-idx="<%= idx %>" data-action="click->books#show_tab"><%= edition.title %></span>
<% end %>
            </ul>
          </div>
<% end %>

          <div class="content">
<% if @book.cover_pic and !@book.editions? %>
            <div class="coverpic">
              <img src="<%= @book.cover_pic %>" alt="<%= @book.title%> (cover)" />
            </div>
<% end %>
<% if @tabs and @book.editions? %>
            <div class="tabs" data-target="books.tabset">
<% @tabs.each_with_index do |tab, idx| %>
              <div class="tab_content" id="<%= @book.editions[idx].ident %>" data-target="books.content">
                            <div class="coverpic">
<% if @book.editions? and @book.editions[idx].cover_pic %>
              <img src="<%= @book.editions[idx].cover_pic %>" alt="<%= @book.title%> (cover)" />
<% end %>
            </div>
                <%= tab %>
              </div>
<% end %>
            </div>
<% else %>
            <%= @content %>
<% end %>
          </div>
        </section>
      </article>
